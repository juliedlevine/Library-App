<!DOCTYPE html>
<h3>Add a new book</h3>

<form>

    <div class="form-group">
        <label for="name">Book Title:</label>
        <input type="text" class="form-control" id="name" name="title">
    </div>

    <div class="form-group">
        <label for="content">Description or Review:</label>
        <textarea class="form-control description" id="content" rows="3" name="description"></textarea>
    </div>

    <div class="form-group">
        <button class="btn btn-primary save_book">Submit</button>
    </div>

    <div class="search_results">
        <img class="search_cover">
        <h4 class="search_title"></h4>
        <p class="search_author"></p>
    </div>

    <a href="/">Home</a>

</form>
